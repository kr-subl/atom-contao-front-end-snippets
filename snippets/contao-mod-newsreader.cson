'.source.css':
  'Contao Mod Newsreader':
    'prefix': 'mod_newsreader'
    'body': """
      .mod_newsreader {
        ${1}
      }

      .mod_newsreader .layout_full {
        ${2}
      }

      .mod_newsreader .layout_latest {
        ${3}
      }

      .mod_newsreader .layout_simple {
        ${4}
      }

      .mod_newsreader .layout_short {
        ${5}
      }

      .mod_newsreader .info {
        ${6}
      }

      .mod_newsreader .teaser {
        ${7}
      }
    """

'.source.less, .source.scss':
  'Contao Mod Newsreader':
    'prefix': 'mod_newsreader'
    'body': """
      .mod_newsreader {
        ${1}

        .layout_full {
          ${2}
        }

        .layout_latest {
          ${3}
        }

        .layout_simple {
          ${4}
        }

        .layout_short {
          ${5}
        }

        .info {
          ${6}
        }

        .teaser {
          ${7}
        }

      }
    """

'.source.sass, .source.styl':
  'Contao Mod Newsreader':
    'prefix': 'mod_newsreader'
    'body': """
      .mod_newsreader
        ${1}
        .layout_full
          ${2}
        .layout_latest
          ${3}
        .layout_simple
          ${4}
        .layout_short
          ${5}
        .info
          ${6}
        .teaser
          ${7}
    """
